<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:elevation="@dimen/indent_s"
    android:padding="@dimen/indent_xl">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_route_type_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecondaryAccent"
        android:textSize="@dimen/font_m"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Заголовок типа маршрута" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_route_type_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/indent_m"
        app:layout_constraintTop_toBottomOf="@id/item_route_type_title" />

</androidx.constraintlayout.widget.ConstraintLayout>